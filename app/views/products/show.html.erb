<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>


    <div class ="row">
      <% if current_user %>
      <div class="col-sm-12">
        <h1> New Review </h1>
        <%= form_for [@product, Review.new] do |form| %>
          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <div class="col-sm-11">
              <%= form.text_area :description, class: 'form-control' %>
            </div>
            <div class="col-sm-1">
              <%= form.select :rating, [1, 2, 3, 4, 5] %>
            </div>
          </div>

          <%= form.submit 'Post Review', class: 'btn btn-primary' %>
        <% end %>
      </div>
      <% end %>


      <div class="col-sm-12">
        <h1> Reviews </h1>
      </div>
      <% if @product.reviews.size > 0 %>
        <% @product.reviews.order(created_at: :desc).each do |r| %>
          <dl class="dl-horizontal">
            <div class="col-sm-12">
              <dt> <%= r.user.name %> </dt>
              <dd> <span> <%= r.description %> Rating: <%= r.rating %> </span>
                <span> <%= link_to product_review_path(@product, r), class: 'btn btn-xs btn-danger', method: :delete do %>
                  Delete
                <%end%>
                </span>
              </dd>
            </div>
          </dl>
          <%end%>
        <% end%>
    </div>


  </article>

</section>
